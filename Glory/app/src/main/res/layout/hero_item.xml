<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/mainPageCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/hero_photo"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">
            <Button
                android:id="@+id/partnerHeroBtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="最佳拍档"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_button"/>
            <Button
                android:id="@+id/compressHeroBtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:background="#00000000"
                android:text="压制英雄"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/beCompressedHeroBtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="被压制英雄"
                android:textColor="@color/colorWhite"
                android:background="#00000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:background="#00000000">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/relationIcon1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:alpha="0.8"/>

                    <TextView
                        android:id="@+id/hero_name_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="hero2"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:background="#00000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/relationIcon2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="#00000000"
                        android:alpha="0.8" />

                    <TextView
                        android:id="@+id/hero_name_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="hero2"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"/>
                </LinearLayout>

            </LinearLayout>
            <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/hero_relation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textDirection="anyRtl"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:background="#00000000"
                    android:alpha="0.9" />
            </ScrollView>

        </LinearLayout>
        <TextView
            android:id="@+id/hero_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textDirection="anyRtl"
            android:textAlignment="center"
            android:textColor="#F0F8FF"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>